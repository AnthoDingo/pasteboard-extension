{
  "manifest_version": 2,
  "name": "Pasteboard Image Upload",
  "description": "A quick and simple way to upload images to Pasteboard.",
  "version": "1.0",

  "icons": {
    "16": "images/icon16.png",
    "32": "images/icon32.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },

  "browser_action": {
      "default_icon": {
        "19": "images/icon19.png",
        "38": "images/icon38.png"
      },
      "default_title": "Upload an image to Pasteboard",
      "default_popup": "popup.html"
  },

  "permissions": [
    "tabs", "http://*/*", "https://*/*", "http://localhost/*", "clipboardRead"
  ],

  "web_accessible_resources": ["scripts/inject.js"]
}